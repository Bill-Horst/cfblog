<%= form_with(model: post, local: true) do |form| %>
<% if post.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

  <ul>
    <% post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :title %>
  <%= form.text_field :title, id: :post_title %>
</div>

<div class="field">
  <%= form.label :subtitle %>
  <%= form.text_area :subtitle, id: :post_subtitle %>
</div>

<div class="field">
  <%= form.label :imageurl %>
  <%= form.text_area :imageurl, id: :post_imageurl %>
</div>

<div class="field post-body-edit-field">
  <%= form.label :post_body %>
  <!-- <%= form.text_area :post_body, id: :post_post_body %> -->
  <%= form.text_area :post_body, as: :wysihtml5, class: "wysihtml5" %>
</div>

<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>

<h1>Categories</h1>
<% @categories.each do |category| %>
<%= form.radio_button(:category_id, category.id) %>
<%= form.label(:category_id, category.name) %>
<% end %>

<h1>Tags</h1>
<% @tags.each do |tag| %>
<%= check_box_tag('tags[]', tag.name, Post.tag_exists(tag.name, post ? post.id : -1)) %> <!-- in model, make method that takes tag name and project id and returns 'true' if it exists on project -->
<%= label_tag(:tags, tag.name) %>
<% end %>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
