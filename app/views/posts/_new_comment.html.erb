<% if signed_in? %>
  <h4>Add a comment:</h4>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_field :body %>
    </p>
    <p>
      <%= f.submit "Submit Comment", class: "btn admin-buttons" %>
    </p>
  <% end %>
<% end %>
