<p id="notice"><%= notice %></p>

<% if @example_posts %>
<div class="container">
  <div id="carousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% @example_posts.each_with_index do |post, index| %>
      <li data-target="#carousel" data-slide-to="<%= index %>" class="<%= "active" if post == @example_posts.first %>"></li>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <% @example_posts.each do |post| %>
      <div class="item hover-transition-links<%= " active" if post == @example_posts.first %>">
        <%= image_tag(post.imageurl, class: 'carousel-image img-responsive') %>
        <div class="carousel-caption">
          <%= link_to post.title, post %>
        </div>
      </div>
      <% end %>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div> <!-- end of carousel -->
</div>
<hr />
<% end %>


<div class='container'>

  <% if @filter %>
  <h2><%= @filter %></h2>
  <% end %>

  <div class="row">

    <div class="col-md-10">
      <div class='text-center'>
        <% @posts.each do |post| %>
        <div class='col-md-6 individual-post-display'>
          <% if post.imageurl %>
          <%= link_to image_tag(post.imageurl, class: 'img-responsive post-image'), post %>
          <% end %>
          <h2><%= post.title %></h2>
          <div class='caption'>
            <h4 class=''>"<%= post.subtitle %>"</h4>
          </div>
          <% if signed_in? && current_user.admin? %>
          <%= link_to 'Edit', edit_post_path(post), :"data-turbolinks" => false, :class => "admin-buttons" %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "admin-buttons" %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-2 hover-transition-links">
      <h1>Categories</h1>
      <% @categories.each do |category| %>
      <p><%= link_to category.name, posts_path(:category_id => category.id) %></p>
      <% end %>

      <h1>Tags</h1>
      <% @tags.each do |tag| %>
      <p><%= link_to tag.name, posts_path(:tag_id => tag.id) %> </p> <!-- why is this still passing an id? -->
      <% end %>
    </div>

  </div>

</div>

<% if signed_in? && current_user.admin? %>
<%= link_to 'New Post', new_post_path, :class => "admin-buttons" %>
<% end %>

