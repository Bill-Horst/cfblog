<p id="notice"><%= notice %></p>


<div class='container'>
  <div class='row text-center'>
    <% @posts.each do |post| %>
    <div class='col-md-6 individual-post-display'>
      <% if post.imageurl %>
      <%= image_tag(post.imageurl, class: 'img-responsive post-image') %>
      <% end %>
      <%= link_to 'Read', post, :class => "btn btn-success read-post-button" %>
      <div class=''>
        <h2><%= post.title %></h2>
      </div>
      <div class='caption'>
        <h4 class='product-description'>"<%= post.subtitle %>"</h4>
      </div>
      <div class='thumbnail-product-information'>
        <div class='row'>
          <div class='col-sm-6'>

            <%= link_to 'Show', post, :class => "btn btn-info" %>
            <%= link_to 'Edit', edit_post_path(post), :class => "btn btn-warning" %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>

          </div>
          <div class='col-sm-6'>



          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= link_to 'New Post', new_post_path %>
