<div class="tag-index-page simple-display-page">
  <p id="notice"><%= notice %></p>

  <h1>Tags</h1>

  <%= link_to 'New Tag', new_tag_path, class: "admin-buttons simple-display-page-button" %>

  <hr />

  <% @tags.each do |tag| %>
  <div class="row simple-display-page-row">
    <div class="col-md-6 simple-display-page-unit-name">
      <span><%= tag.name %></span>
    </div>
    <div class="col-md-3">
      <%= link_to 'Edit', edit_tag_path(tag), class: "admin-buttons simple-display-page-row-button" %>
    </div>
    <div class="col-md-3">
      <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, class: "admin-buttons simple-display-page-row-button" %>
    </div>
  </div>
  <hr />
  <% end %>

</div>
